{
  "name": "social-meet-app",
  "version": "1.0.0",
  "description": "Application for managing social events",
  "main": "index.js",
  "git": {
    "url": "git@github.com:nlebedevinc/awesome-profile-hapi.git"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:server": "node ./build/src/server/index",
    "build": "del-cli ./public && webpack",
    "build:server": "del-cli ./build && npm run lint:server && tsc --build tsconfig.server.json",
    "lint:server": "tslint --project tsconfig.server.json --config tslint.json src/server/**/*.ts",
    "docker:build": "docker build -f docker/Dockerfile -t profile/${npm_package_name} .",
    "docker:start": "docker run -d -it -p 80:8080 --name=kz profile/${npm_package_name}"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "express": "^4.16.3",
    "hapi": "^17.8.1",
    "hapi-auth-jwt2": "^8.2.0",
    "inert": "^5.1.2",
    "lowdb": "^1.0.0",
    "prop-types": "^15.6.1",
    "qs": "^6.5.1",
    "react": "^16.7.0",
    "react-dom": "^16.3.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "serve-static": "^1.13.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/hapi": "^17.8.2",
    "@types/inert": "^5.1.2",
    "@types/lowdb": "^1.0.6",
    "@types/node": "^10.12.18",
    "@types/uuid": "^3.4.4",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "del-cli": "^1.1.0",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "webpack-dev-middleware": "^3.1.2",
    "webpack-hot-middleware": "^2.22.0"
  }
}
